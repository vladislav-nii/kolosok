<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="user-scalable=no">
    <title>Обучение</title>
    <link rel="stylesheet" href="../css/surveys.css">
    <link rel="stylesheet" href="../css/category.css">
    <link rel="stylesheet" media="screen" href="https://fontlibrary.org//face/avdira-textfonts" type="text/css" />
</head>

<body>
    <div id="btn-holder">
        <button class="back" id="back"></button>
        <h2 id="choose-category">Выберите категорию</h2>
    </div>
    <div class="grid-container">
        <button type="button" class="grid-item" id="category1" onclick="choosingCategory(1)">Учебный материал</button>
        <button type="button" class="grid-item" id="category2" onclick="choosingCategory(2)">Задания</button>
        <button type="button" class="grid-item" id="category3" onclick="choosingCategory(3)">Тесты</button>
    </div>

    <!-- <script src="../js/category.js"></script> -->
    <script>
        const backBtn = document.getElementById("back");
        backBtn.addEventListener("click", (ev) => {
            location.assign("https://kolosok.onrender.com/main");
        });
        const buttons = document.getElementsByClassName("grid-item");
        Array.from(buttons).forEach((button) => {
            button.style.backgroundImage = 'url(../img/lock3.png)';
            button.style.backgroundRepeat = 'no-repeat';
            button.style.backgroundPosition = 'center center';
            button.style.backgroundAttachments = 'fixed';
            button.style.backgroundSize = 'contain';
            button.style.color = 'rgba(66, 66, 66, 0.4)';
        });
    </script>
</body>

</html>